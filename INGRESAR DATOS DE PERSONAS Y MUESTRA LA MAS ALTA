#include <stdio.h>
/*Define una estructura Persona con nombre y altura. 
Pide los datos de 3 personas y muestra cu치l es la m치s alta. 
En caso de empate, mostrar los nombres de todas las personas m치s altas.*/
struct persona {
	char nombre[30];
	float altura;
};

int main() {
	struct persona arr[3];
	float mayor = 0;
	
	// Ingreso de datos
	for (int i = 0; i < 3; i++) {
		printf("Ingrese el nombre de la persona %d: ", i + 1);
		scanf("%s", arr[i].nombre);
		printf("Ingrese la altura de la persona %d: ", i + 1);
		scanf("%f", &arr[i].altura);
		printf("\n");
		
		if (arr[i].altura > mayor) {
			mayor = arr[i].altura;
		}
	}
	
	// Mostrar personas con la mayor altura (posibles empates)
	printf("La(s) persona(s) m치s alta(s):\n");
	for (int i = 0; i < 3; i++) {
		if (arr[i].altura == mayor) {
			printf("%s con %.2f metros de altura\n", arr[i].nombre, arr[i].altura);
		}
	}
	
	return 0;
}
